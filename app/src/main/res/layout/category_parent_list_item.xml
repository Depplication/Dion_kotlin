<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/main_line"/>


    <TextView
        android:layout_marginVertical="5dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:id="@+id/parent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:text="카테고리" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toTopOf="@id/parent_text"
        app:layout_constraintBottom_toBottomOf="@id/parent_text"
        app:layout_constraintStart_toEndOf="@id/parent_text"
        android:layout_marginStart="10dp"/>

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/main_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>